<resources>

    <!-- Base application theme -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme with some UI debugging aids -->
    <style name="MyAppThemeDebug" parent="MyAppTheme">
        <!-- Overriding default styles for specific Views -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <!-- Border around TextViews -->
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/border_1</item>
    </style>

</resources>
